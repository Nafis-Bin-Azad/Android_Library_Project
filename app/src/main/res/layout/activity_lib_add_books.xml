<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/add_librarian_gradient"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_add_books"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Add Books"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/lbl_call_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:text="Call No:"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white" />

                <EditText
                    android:id="@+id/edtx_call_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:ems="10"
                    android:maxLength="3"
                    android:inputType="number"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/lbl_name_of_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:text="Name:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edtx_name_of_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/lbl_author_of_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="Author:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edtx_author_of_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/lbl_publisher_of_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:text="Publisher:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edtx_publisher_of_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:ems="10"
                    android:inputType="text"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/lbl_quantity_of_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:text="Quantity:"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <EditText
                    android:id="@+id/edtx_quantity_of_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:ems="10"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textColor="@android:color/white" />

            </GridLayout>

            <Button
                android:id="@+id/bttn_add_books"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Books" />

            <Button
                android:id="@+id/bttn_return"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Return" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>